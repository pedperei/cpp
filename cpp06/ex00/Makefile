NAME=Converter

C_FILES= main.cpp\
		 ScalarConverter.cpp\
		 
		 
CXX=c++
CXXFLAGS= -std=c++98 -Wall -Wextra -Werror -g #-fstandalone-debug
REMOVE = rm -rf

all: $(NAME)

$(NAME): $(C_FILES)
	$(CXX) $(CXXFLAGS) $(C_FILES) -o $(NAME) 

clean:
	$(REMOVE) -f

fclean: clean
	$(REMOVE) $(NAME)

re: fclean all

test: all
	./$(NAME) a
	@echo "\n"
	./$(NAME) A
	@echo "\n"
	./$(NAME) 0
	@echo "\n"
	./$(NAME) ""
	@echo "\n"
	./$(NAME) 2
	@echo "\n"
	./$(NAME) -123
	@echo "\n"
	./$(NAME) +123
	@echo "\n"
	./$(NAME) 123
	@echo "\n"
	./$(NAME) 90
	@echo "\n"
	./$(NAME) 123.0
	@echo "\n"
	./$(NAME) +-123
	@echo "\n"
	./$(NAME) sdgsdfgdsfgdsf
	@echo "\n"
	./$(NAME) 2147483647
	@echo "\n"
	./$(NAME) 214748364711111
	@echo "\n"
	./$(NAME) +2147483647
	@echo "\n"
	./$(NAME) 2147483648
	@echo "\n"
	./$(NAME) +2147483648
	@echo "\n"
	./$(NAME) +2147483649
	@echo "\n"
	./$(NAME) +21474836423432423
	@echo "\n"
	./$(NAME) -2147483648
	@echo "\n"
	./$(NAME) -21474836411
	@echo "\n"
	./$(NAME) 
	@echo "\n"
	./$(NAME) 
	@echo "\n"
	./$(NAME) nan
	@echo "\n"
	./$(NAME) -inf
	@echo "\n"
	./$(NAME) +inf
	@echo "\n"
