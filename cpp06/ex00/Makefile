	@echo "\n"
	./$(NAME) sdgsdfgdsfgdsf
	@echo "\n"
	./$(NAME) 42.0f
	@echo "\n"
	./$(NAME) 0000.0000f
	@echo "\n"
	./$(NAME) 0000.0000
	@echo "\n"
	./$(NAME) -0000.0000
	@echo "\n"
	./$(NAME) -0000.0000f
	@echo "\n"
