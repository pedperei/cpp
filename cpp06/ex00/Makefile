NAME=Converter

C_FILES= main.cpp\
		 ScalarConverter.cpp\
		 
		 
CXX=c++
CXXFLAGS= -std=c++98 -Wall -Wextra -Werror -g #-fstandalone-debug
REMOVE = rm -rf

all: $(NAME)

$(NAME): $(C_FILES)
	$(CXX) $(CXXFLAGS) $(C_FILES) -o $(NAME) 

clean:
	$(REMOVE) -f

fclean: clean
	$(REMOVE) $(NAME)

re: fclean all

test: all
	./$(NAME) c
	@echo "\n"
	./$(NAME) C
	@echo "\n"
	./$(NAME) 0
	@echo "\n"
	./$(NAME) ""
	@echo "\n"
	./$(NAME) -123
	@echo "\n"
	./$(NAME) +123
	@echo "\n"
	./$(NAME) 123
	@echo "\n"
	./$(NAME) 123.0
	@echo "\n"
	./$(NAME) asdsa
	@echo "\n"
	./$(NAME) 2147483647
	@echo "\n"
	./$(NAME) 2147483647000
	@echo "\n"
	./$(NAME) +2147483647
	@echo "\n"
	./$(NAME) +123629172618269173262718
	@echo "\n"
	./$(NAME) -2147483648
	@echo "\n"
	./$(NAME) -2147483649098
	@echo "\n"
	./$(NAME) 
	@echo "\n"
	./$(NAME) -
	@echo "\n"
	./$(NAME) nan
	@echo "\n"
	./$(NAME) -inf
	@echo "\n"
	./$(NAME) +inf
	@echo "\n"
	./$(NAME) -inff
	@echo "\n"
	./$(NAME) +inff
	@echo "\n"
	./$(NAME) nanf
	@echo "\n"
	./$(NAME) 0.0f
	@echo "\n"
	./$(NAME) 42.0f
	@echo "\n"
	./$(NAME) 0000.0000f
	@echo "\n"
	./$(NAME) 0000.0000
	@echo "\n"
	./$(NAME) -0000.0000
	@echo "\n"
	./$(NAME) 1111111
	@echo "\n"
	./$(NAME) -111111
	@echo "\n"
	./$(NAME) 1.3f
	@echo "\n"
	./$(NAME) 1.00000000000000000000000000000000000000000004f
	@echo "\n"
	./$(NAME) 31312.3214f
	@echo "\n"
	./$(NAME) 1245.34354

.PHONY: all clean fclean re